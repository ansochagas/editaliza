# .env.performance - Configurações otimizadas para produção
# Copie estas configurações para seu arquivo .env

# === CONFIGURAÇÕES DE PERFORMANCE DO BANCO ===
DB_CACHE_SIZE=64000
DB_MMAP_SIZE=268435456
DB_WAL_CHECKPOINT_INTERVAL=1000
DB_BUSY_TIMEOUT=30000

# === CONFIGURAÇÕES DE RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_GENERATE_MAX=5
RATE_LIMIT_GENERATE_WINDOW=3600000

# === CONFIGURAÇÕES DE PERFORMANCE DA APLICAÇÃO ===
SCHEDULE_GENERATION_TIMEOUT=30000
BATCH_INSERT_SIZE=100
MAX_TOPICS_PER_PLAN=1000
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=100

# === CONFIGURAÇÕES DE CACHE ===
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379
CACHE_TTL_PLANS=300
CACHE_TTL_TOPICS=600

# === CONFIGURAÇÕES DE LOGGING ===
LOG_LEVEL=info
LOG_SLOW_QUERIES=true
LOG_PERFORMANCE_METRICS=true
LOG_SYSTEM_HEALTH=true

# === CONFIGURAÇÕES DE MONITORAMENTO ===
HEALTH_CHECK_INTERVAL=300000
MEMORY_ALERT_THRESHOLD=512
CPU_ALERT_THRESHOLD=80
DISK_ALERT_THRESHOLD=90

# === CONFIGURAÇÕES DE BACKUP ===
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# === CONFIGURAÇÕES DE SEGURANÇA ===
ENABLE_BRUTEFORCE_PROTECTION=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
ENABLE_IP_WHITELIST=false

# === CONFIGURAÇÕES DE PROCESSO ===
NODE_OPTIONS="--max-old-space-size=2048"
UV_THREADPOOL_SIZE=16